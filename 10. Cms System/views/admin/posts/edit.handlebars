 <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Post</a>
        </li>
        <li class="breadcrumb-item active">Edit</li>
      </ol>

<div class="col-md-12">
    <form action="/admin/posts/edit/{{post._id}}?_method=PUT" method="POST">
   
        <div class="form-group col-sm-12">
            <label>Title</label>
            <input class="form-control" name="title" placeholder="Enter Title" id="title" value="{{post.title}}">
        </div>
                <div class="form-group col-sm-12">
            <label>Category</label>
    
            <select class="form-control" name="category" id="category">
            {{#select post.category}}
              {{#each categories}}
    
                <option value="{{_id}}">{{name}}</option>
              
              {{/each}}
              {{/select}}
            </select>
        </div>
        <div class="form-group col-sm-12">
            <label>Status</label>
            <select class="form-control" name="status" id="status">

               {{#select post.status}} 
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="draft">Draft</option>
               {{/select}}
            </select>
        </div>
        <div class="form-group col-sm-12">
            <label>
            <input type="checkbox" class="form-check-input" {{#if post.allowComments}} checked="checked" {{/if}} id="allowComments"  name="allowComments"/>
            Allow Comments</label>
        </div>
        <div class="form-group col-sm-12">
            <label>Body</label>
            <textarea rows="4" class="form-control" name="body" id="body" >{{post.body}}</textarea>
        </div>
        <div class="form-group col-sm-12">
            <input class="btn btn-primary" type="submit" value="Update">
        </div>
    </form>
</div>