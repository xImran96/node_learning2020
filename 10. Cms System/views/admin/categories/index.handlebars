 <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Categories</li>
      </ol>

      
      
      {{#if success_message}}

        <div class="alert alert-success alert-dismissible fade show" role="alert">
           <strong>Note!</strong> {{success_message}}
             <button type="button" class="close" data-dismiss="alert" aria-label="Close">
               <span aria-hidden="true">&times;</span>
             </button>
        </div>
          

      {{/if}}

          <div class="row">        
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-header">
                  <i class="fa fa-table"></i> All Categories</div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Title</th>
                          <th>Edit</th>
                          
                          
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                        <th>Id</th>
                          <th>Title</th>
                          <th>Edit</th>
                    
                          <th>Action</th>
                        </tr>
                      </tfoot>
                      <tbody>

                        {{#each categories }}
                            <tr>
                              <td>{{_id}}</td>
                              <td>{{name}}</td>
                              <td>
                                 <a href="/admin/categories/edit/{{_id}}" class="btn btn-success">Edit</a>
                              </td>
                              <td>
                         <form action="/admin/categories/{{_id}}?_method=DELETE" method="POST">
                              <input type="submit" class="btn btn-danger" value="Delete">
                         </form>
                      </td>
                            </tr>
                        {{/each}}
                      
                        
                    </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          
            <div class="col-md-4">
              <form method="POST" action="/admin/categories/create">
                <div class="form-group">
                  <label>Name</label>
                  <input class="form-control" name="name" placeholder="Enter Name" id="name">
                </div>

                <div class="form-group">
                  <input class="btn btn-primary" type="submit" value="Create">
                  <input class="btn btn-secondary" type="reset" value="Reset">
                </div>
              </form>
           </div>
          </div>  