 <!-- Breadcrumbs-->
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Post</a>
        </li>
        <li class="breadcrumb-item active">Create</li>
      </ol>

      {{#each errors}}

        <div class="alert alert-danger alert-dismissible fade show" role="alert">
           <strong>Required!</strong> {{errors}}
             <button type="button" class="close" data-dismiss="alert" aria-label="Close">
               <span aria-hidden="true">&times;</span>
             </button>
        </div>

          

      {{/each}}

<div class="col-md-12">
    <form method="POST" action="/admin/posts/create" enctype="multipart/form-data">
        <div class="form-group col-sm-12">
            <label>Title</label>
            <input class="form-control" name="title" placeholder="Enter Title" id="title">
        </div>
        <div class="form-group col-sm-12">
            <label>Category</label>
            <select class="form-control" name="category" id="category">
              {{#each categories}}
                <option value="{{_id}}">{{name}}</option>
              {{/each}}
            </select>
        </div>
        <div class="form-group col-sm-12">
            <label>Status</label>
            <select class="form-control" name="status" id="status">
                <option value="public">Public</option>
                <option value="private">Private</option>
                <option value="draft">Draft</option>
            </select>
        </div>
        <div class="form-group col-sm-12">
            <label>Image</label>
            <input class="form-control" type="file" name="file" id="file">
        </div>
        <div class="form-group col-sm-12">
            <label>
            <input type="checkbox" class="form-check-input" id="allowComments"  name="allowComments"/>
            Allow Comments</label>
        </div>
        <div class="form-group col-sm-12">
            <label>Body</label>
            <textarea rows="4" class="form-control" name="body" id="body"></textarea>
        </div>
        <div class="form-group col-sm-12">
            <input class="btn btn-primary" type="submit" value="Create">
            <input class="btn btn-secondary" type="reset" value="Reset">
        </div>
    </form>
</div>