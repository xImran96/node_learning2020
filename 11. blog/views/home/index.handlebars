{{>home/main-menu}}
  
  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">

         <h6 class="my-4 text-center">CATEGORIES</h6>
        <div class="list-group">
           {{#each categories}}
               <a href="/category/{{_id}}" style="text-decoration:none; font-weight:500" class="list-group-item bg-dark text-light">{{name}}</a>      
           {{/each}}
        </div>
         

        

      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block img-fluid" src="/frontend/images/1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="/frontend/images/2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block img-fluid" src="/frontend/images/3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <div class="row">

        {{#each products}}
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              {{!-- <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a> --}}
                   <div id="{{_id}}" class="carousel slide" data-ride="carousel">
                     <div class="carousel-inner">
                            {{#each images}}
                                
                                        <div class="carousel-item {{#if @first}}active{{/if}} ">
                                            <img class="d-block w-100" src="./upload/products/{{name}}">
                                        </div>
                                
                                       
                            
                            {{/each}} 
           
                     </div>
                    </div>
              <div class="card-body text-center">
                <h4 class="card-title">
                  <a href="#" style="text-decoration:none;">{{name}}</a>
                </h4>
                {{!-- <h5 class="text-center">price</h5> --}}
                <p class="card-text">Rs {{price}}/-</p>
                <p class="card-text">{{#if status}}In-Stock{{else}}Out-Of-Stock{{/if}}
                </p>
              </div>
              <div class="card-footer">
                  <a href="/product/{{_id}}" class="btn btn-success btn-sm float-left">View Detail</a>
              <button class="btn btn-dark btn-sm float-right">Add to Cart</button>
              </div>
            </div>
          </div>
            {{/each}}

        </div>

        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

  </div>
  <!-- /.container -->




  {{>home/footer}}